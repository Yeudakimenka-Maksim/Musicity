@model Mvc.PL.ViewModels.PostPage.PostPagePostViewModel

@{
    ViewBag.Title = "Musicity - " + Model.Name + " Replies";
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Replies of @Model.Name</legend>
        @Html.Partial("ReplySummary", Model.Replies)
        @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <div id="footer">
                @Html.RouteLink("+ Reply this", new { controller = "Musicity", action = "CreateReply", post = Model.Name }, new { style = "background-color:#333;border:1px solid black;color:White;line-height:2.1em;margin-left:0.5em;padding:0.4em 1em;text-decoration:none;" })
            </div>
        }
    </fieldset>
    <div style="padding-top: 1em">All the Time values are in Universal Time Format</div>
}