@model IEnumerable<Mvc.PL.ViewModels.AdminPages.AdminPagesTopicViewModel>

@{
    ViewBag.Title = "Musicity - Admin pages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="Grid">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Creation Time</th>
        <th>Created by</th>
        <th>Belongs to Category</th>
        <th>Actions</th>
    </tr>
    @foreach (var topic in Model)
    {
        <tr>
            <td>@Html.ActionLink(topic.Name, "EditTopic", new { topic.Id })</td>
            <td>@topic.Description</td>
            <td>@topic.CreationTime.ToShortDateString()</td>
            <td>@topic.Creator.Name</td>
            <td>@topic.Category.Name</td>
            <td>
                @using (Html.BeginForm("DeleteTopic", "Admin"))
                {
                    @Html.Hidden("id", topic.Id)
                    <input type="submit" value="Delete" />
                }
            </td>
        </tr>
    }
</table>

<p>@Html.ActionLink("+ New Topic", "CreateTopic", null, new { style = "background-color:#333;border:1px solid black;color:White;line-height:4.5em;padding:0.4em 1em;text-decoration:none;" })</p>