@model Mvc.PL.ViewModels.CreatePostPage.CreatePostPagePostViewModel

@{
    ViewBag.Title = "Add new Post";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add new Post</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Submit" style="background-color: #333; border: 1px solid black; color: White; padding: 0.4em 1em; text-decoration: none;"/>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}